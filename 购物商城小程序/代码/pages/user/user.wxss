page{
  background-color: #edece8;
  font-size: 28rpx;
}
.user_info_wrap{
  position: relative;
}
.user_info_wrap{
  height: 45vh;
  background-color: var(--themeColor);
  position: relative;
}
.user_bg{
  height: 46vh;
  box-sizing: border-box;
  /* 高斯模糊效果 */
  filter: blur(5rpx);
}
.user_info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_icon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_name{
  color: #fff;
  margin-top: 40rpx;
  font-size: 35rpx;
}
.user_btn{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  border: 1px solid greenyellow;
  color: greenyellow;
  font-size: 38rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}
/* 主要内容 */
.user_content{
  position: relative;
}
.user_main{
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  color: #666;
  padding-bottom: 100rpx;
}
/* 历史足迹 */
.history_wrap{
  background-color: #fff;
  display:flex;
}
.history_wrap>navigator{
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.his_num{
  color: var(--themeColor);
}
/* 我的订单 */
.orders_wrap{
  background-color: #fff;
  margin-top: 30rpx;
}
.orders_title{
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}
.order_content{
  display: flex;
}
.order_content navigator{
  padding: 20rpx;
  flex: 1;
  text-align: center;
}
.iconfont{
  color: var(--themeColor);
}
/* 收货地址管理 */
.address_wrap{
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.app_info_wrap{
  margin-top: 30rpx;
  background-color: #fff;
}
.app_info_item{
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}
.app_info_contact{
  display: flex;
  justify-content: space-between;
}
.recommenda_wrap{
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
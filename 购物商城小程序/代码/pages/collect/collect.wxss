
.collect_main{
  background-color: #f3f4f6;
}
.collect_title{
  padding: 40rpx 0;
}
.collect_tips{
  padding: 15rpx;
  border: 1px solid #ccc;
  margin-left: 25rpx;
  background-color: #fff;
}
.active{
  color: red;
  border-color:currentColor;
}
/* collect_content里面的样式 */
.goods_item {
  display: flex;
  border-bottom: 1rpx solid #ccc;
  background-color: #fff;
}

.goods_img_wrap {
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
  padding: 5rpx;
}

.goods_img_wrap image {
  width: 70%;
}

.goods_info_wrap {
  display: flex;
  flex: 3;
  flex-direction: column;
  justify-content: space-around;
}

.goods_name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods_price {
  color: red;
  font-size: 32rpx;
}

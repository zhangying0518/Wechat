<view>
  <Tabs tabs="{{tabs}}" bindtabsItemChange="handTabsItemChange">
    <view class="order_main">
      <view class="order_item" wx:for="{{orders}}" wx:key="index">
        <view class="order_no_row">
          <view class="order_no_text">订单编号</view>
          <view class="order_no_value">￥{{item.order_number}}</view>
        </view>
        <view class="order_price_row">
          <view class="order_no_text">订单价格</view>
          <view class="order_no_value">￥{{item.order_price}}</view>
        </view>
        <view class="order_time_row">
          <view class="order_no_text">订单日期</view>
          <view class="order_no_value">￥{{item.create_price}}</view>
        </view>
      </view>
    </view>
  </Tabs>
</view>
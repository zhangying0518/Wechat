<view class="tabs">
	<view class="tabs_title">
		<view 
		  wx:for="{{tabs}}" 
			wx:key="index"
			data-index="{{index}}" 
			bindtap="handleItemTap" 
			class="title_item {{item.isActive?'active':''}}"
			bindtap="handleItemTap"
			data-index="{{index}}">
			{{item.value}}
		</view>
	</view>
	<view class="tabs_content">
		<slot></slot>
	</view>
</view>